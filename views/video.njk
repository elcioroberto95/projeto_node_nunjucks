{% extends "layout.njk" %}

{% block head %}
<title>{{items.title}}</title>
{% endblock %}

{% block content %}
  <div class="wrapper video">
    <h1>{{items.title}}</h1>
  </div>
  <section class="video" >
      <div class="card">
        <div class="card_image_container {{ 'featured-wrapper' if item.featured }}">
          <iframe src="https://www.youtube.com/embed/{{items.id}}" frameborder="0"></iframe>
       
          </div>
          <div class="card__content">
            <p>{{ items.title }}</p>
          </div>
          <div class="card__info">
            <p>{{ items.duration }}</p>
            <p class="card-price">
              {{ items.price }}
            </p>
          </div>
        </div>
    </section>

    <script src="/scripts.js"></script>
  {% endblock %}